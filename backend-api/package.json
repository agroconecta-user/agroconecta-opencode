{
  "name": "@agroconecta/backend-api",
  "type": "module",
  "engines": {
    "node": "20.x"
  },
  "scripts": {
    "dev": "nodemon",
    "build": "rm -rf dist && babel -f .babelrc -x .ts -d dist src",
    "migrate": "export $(cat .env | xargs) && npx migrate-mongo up",
    "migrate-rollback-last": "export $(cat .env | xargs) && npx migrate-mongo down",
    "migrate-rollback-all": "while npm run migrate-rollback-last | grep -q \"MIGRATED DOWN:\"; do :; done",
    "create-migration": "export $(cat .env | xargs) && npx migrate-mongo create",
    "seed": "node scripts/seed-solutions.js",
    "test-solution": "node scripts/test-solution-creation.js",
    "debug": "node scripts/debug-solution.js",
    "test": "jest --coverage",
    "docs": "typedoc",
    "type-check": "tsc --noEmit",
    "lint": "npx eslint ."
  },
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/crypto-js": "^4.2.2",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/nodemailer": "^6.4.17",
    "bcryptjs": "^2.4.3",
    "crypto": "^1.0.1",
    "dotenv": "^16.4.5",
    "fastify": "^4.26.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.3.2",
    "nodemailer": "^6.9.16",
    "qs": "^6.14.0",
    "tsx": "^4.19.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.25.9",
    "@babel/preset-typescript": "^7.26.0",
    "@eslint/js": "^9.15.0",
    "@fastify/swagger": "^8.14.0",
    "@fastify/swagger-ui": "^4.1.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.12.7",
    "@vercel/node": "^3.0.22",
    "babel-plugin-add-import-extension": "^1.6.0",
    "babel-plugin-module-resolver": "^5.0.2",
    "eslint": "^9.15.0",
    "globals": "^15.12.0",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^10.1.3",
    "nodemon": "^3.1.7",
    "ts-jest": "^29.2.5",
    "typedoc": "^0.27.4",
    "typedoc-plugin-markdown": "^4.3.2",
    "typescript": "^5.4.5",
    "typescript-eslint": "^8.16.0"
  }
}
