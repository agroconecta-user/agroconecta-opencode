{
  "name": "agroconecta",
  "version": "1.0.0",
  "scripts": {
    "start": "concurrently --names \"FRONTEND-WEB,BACKEND-API,DATABASE\" -c \"bgGreen.bold,bgBlue.bold,bgMagenta.bold,bgCyan.bold\" \"cd frontend-web && npm run dev\" \"cd backend-api && npm run dev\"",
    "reset-db": "cd backend-api && docker container rm --volumes -f tg-mongodb && docker volume rm tg_mongodb_data_container",
    "reset-and-start": "npm run reset-db && npm run start"
  },
  "workspaces": [
    "backend-api",
    "frontend-web"
  ],
  "devDependencies": {
    "@babel/plugin-proposal-private-property-in-object": "^7.21.11",
    "@types/qs": "^6.9.18",
    "@types/react-query": "^1.2.8",
    "@types/react-router-dom": "^5.3.3",
    "@types/react-window": "^1.8.8",
    "concurrently": "^8.2.2",
    "jest": "^29.7.0",
    "prettier-plugin-tailwindcss": "^0.5.14",
    "ts-jest": "^29.2.5"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@mui/icons-material": "^6.5.0",
    "@mui/material": "^6.5.0",
    "@tanstack/react-query": "^5.66.9",
    "fastify-plugin": "^5.0.1",
    "framer-motion": "^12.6.0",
    "mongodb": "^6.14.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-input-mask": "^2.0.4",
    "react-router-dom": "^6.30.1",
    "react-window": "^1.8.11"
  }
}
